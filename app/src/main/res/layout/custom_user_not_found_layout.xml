<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mywhite2">

    <TextView
        android:id="@+id/usernameSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="11dp"
        android:text="Username Search"
        android:textColor="@color/mytext2"
        android:textSize="16sp" />

    <com.andexert.library.RippleView
        android:id="@+id/rippleView"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameSearchView"
        android:clickable="false"
        app:rv_color="@color/grey_400"
        app:rv_type="rectangle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/mywhite2">

            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/notfoundInfoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_info_icon"
                app:civ_border_color="@color/mywhite"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/notfoundsenderUserFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6.5dp"
                android:layout_toEndOf="@+id/notfoundInfoImageView"
                android:layout_toRightOf="@+id/notfoundInfoImageView"
                android:paddingLeft="12dp"
                android:text="Username 'ebad.ali' not found"
                android:textColor="@color/mytext2"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".4dp"
                android:layout_below="@+id/notfoundInfoImageView"
                android:background="#C8C8C8" />
        </RelativeLayout>


    </com.andexert.library.RippleView>

</RelativeLayout>

