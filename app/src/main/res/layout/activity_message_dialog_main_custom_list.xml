<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mywhite2">

    <com.andexert.library.RippleView
        android:id="@+id/rippleViewme"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:rv_color="@color/grey_400"
        app:rv_type="rectangle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/mywhite2">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/senderUserProfilePictureImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/user"
                app:civ_border_color="@color/mywhite"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/senderNameTextView"
                android:layout_width="wrap_content"
                fontPath="fonts/Raleway-Medium.ttf"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/senderUserProfilePictureImageView"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/senderUserProfilePictureImageView"
                android:layout_toRightOf="@+id/senderUserProfilePictureImageView"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"
                android:text="Ebad Ali"
                android:textColor="@color/mytext"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/senderMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/senderUserProfilePictureImageView"
                android:layout_below="@+id/senderNameTextView"
                android:layout_marginRight="60dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/senderUserProfilePictureImageView"
                android:layout_toRightOf="@+id/senderUserProfilePictureImageView"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"
                android:text="Kidhr ha"
                android:textColor="@color/mytext2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/senderMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/senderNameTextView"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="10:15 PM"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/senderMessageUnreadTextView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@+id/senderMessageTimeTextView"
                android:layout_alignRight="@+id/senderMessageTimeTextView"
                android:layout_below="@+id/senderNameTextView"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/message_circle"
                android:gravity="center"
                android:padding="2dp"
                android:text="1"
                android:textColor="@color/mywhite2"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".4dp"
                android:layout_alignLeft="@+id/senderNameTextView"
                android:layout_alignRight="@+id/senderMessageTimeTextView"
                android:layout_below="@+id/senderUserProfilePictureImageView"
                android:background="#C8C8C8" />

        </RelativeLayout>

    </com.andexert.library.RippleView>


</RelativeLayout>

